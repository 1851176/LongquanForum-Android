<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/dz_bg_white"
    android:layout_height="match_parent">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/post_is_essence"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/topic_essence_corner"
                android:gravity="center"
                android:text="精"
                android:textColor="@color/white"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/post_title"
                style="@style/mc_forum_posts_title_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/post_is_essence"
                android:textStyle="bold"
                tools:text="交流会议" />


            <TextView
                android:id="@+id/post_read_count"
                style="@style/topic_hit_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/post_title"
                android:layout_marginTop="8dp" />
        </RelativeLayout>

        <include layout="@layout/layout_topic_divider" />
        <!--发帖人-->
        <include layout="@layout/layout_topic_user" />
        <!--帖子主题内容-->
        <com.mobcent.discuz.widget.SuperListView
            android:id="@+id/topic_content_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null">

        </com.mobcent.discuz.widget.SuperListView>

        <!--赞赏-->
        <include layout="@layout/topic_detail1_posts_last_item" />

        <!--帖子主题内容-->
        <com.mobcent.discuz.widget.SuperListView
            android:id="@+id/topic_reply_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null">

        </com.mobcent.discuz.widget.SuperListView>

    </LinearLayout>

</ScrollView>
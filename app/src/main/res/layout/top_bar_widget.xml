<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/top_bar_widget"
    style="@style/mc_forum_top_bar_bg"
    android:layout_width="fill_parent">
    <TextView
        android:id="@+id/nav_title"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        style="@style/mc_forum_top_title_style"
        android:text="" />

    <com.mobcent.discuz.widget.BackView
        android:id="@+id/nav_btn_back"
        android:visibility="gone"
        style="@style/NavigationButton.Back" />
    <ImageView
        android:layout_alignParentRight="true"
        android:id="@+id/nav_btn_more"
        android:visibility="gone"
        style="@style/NavigationButton" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/middle_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dz_bg_white"
    android:orientation="vertical"
    android:paddingBottom="5.0dip"
    >

    <com.mobcent.discuz.widget.ItemWebView
        android:id="@id/video_web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="120dp"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:layout_marginTop="10.0dip"
        android:visibility="gone" />

    <ImageView
        android:id="@id/video_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0dip"
        android:layout_marginTop="10.0dip"
        android:visibility="gone"
        android:src="@drawable/dz_posts_video" />

    <TextView
        android:id="@id/text_view"
        style="@style/mc_forum_posts_content_detail_style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:layout_marginTop="10.0dip"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:includeFontPadding="false" />

    <ImageView
        android:id="@id/img_view"
        style="@style/mc_forum_posts_content_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0dip"
        android:visibility="gone"
        android:layout_marginRight="15.0dip"
        android:layout_marginTop="10.0dip" />

    <!--音频-->
    <LinearLayout
        android:id="@id/audio_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0dip"
        android:visibility="gone"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/dz_posts_voice_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/play_audio_img"
            android:layout_width="12.0dip"
            android:layout_height="12.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="5.0dip"
            android:src="@drawable/dz_publish_audio_play" />

        <TextView
            android:id="@id/audio_time_text"
            style="@style/mc_forum_posts_content_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5.0dip" />

        <ImageView
            android:id="@id/audio_playing_img"
            android:layout_width="8.0dip"
            android:layout_height="15.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5.0dip"
            android:src="@drawable/dz_voice_chat_img0" />

        <!--<com.mobcent.widget.DZProgressBar-->

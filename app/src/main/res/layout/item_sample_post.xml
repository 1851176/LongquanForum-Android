<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:padding="12dp">

    <ImageView
        android:id="@id/mc_forum_thumbnail_img"
        android:layout_width="66.0dip"
        android:layout_height="52.0dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop" />
    <TextView
        android:id="@+id/post_title"
        android:layout_toRightOf="@id/mc_forum_thumbnail_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/mc_forum_text2_title_normal_color"
        android:textSize="@dimen/mc_forum_text_size_14"
        tools:text="标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题" />
    <TextView
        android:id="@+id/post_time"
        android:layout_toRightOf="@id/mc_forum_thumbnail_img"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="@dimen/mc_forum_text_size_12"
        tools:text="2013-4-5" />

    <TextView
        android:id="@+id/post_read_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/dz_list_circle_pv"
        android:drawablePadding="4dp"
        android:textColor="@color/gray"
        android:textSize="@dimen/mc_forum_text_size_12"
        tools:text="33" />
</RelativeLayout>
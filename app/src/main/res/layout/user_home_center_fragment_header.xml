<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@id/mc_forum_backgroud_center"
        android:layout_width="fill_parent"
        android:layout_height="240.0dip"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@id/mc_forum_backgroud_shadow"
        android:layout_width="fill_parent"
        android:layout_height="240.0dip"
        android:background="#33000000" />

    <TextView
        android:id="@id/mc_forum_user_about_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/mc_forum_backgroud_center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13.0dip"
        android:layout_marginLeft="30.0dip"
        android:layout_marginRight="30.0dip"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="#ffffffff"
        android:textSize="@dimen/mc_forum_text_size_12" />

    <LinearLayout
        android:id="@id/mc_forum_active"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/mc_forum_user_about_center"
        android:layout_marginBottom="10.0dip">

        <TextView
            android:id="@id/mc_forum_participation_center"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/mc_forum_my_partin"
            android:textColor="#ffffffff"
            android:textSize="@dimen/mc_forum_text_size_13" />

        <View
            android:layout_width="1.0px"
            android:layout_height="fill_parent"
            android:background="@drawable/dz_bg_gray" />

        <TextView
            android:id="@id/mc_forum_foucs_center"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/mc_forum_user_follow"
            android:textColor="#ffffffff"
            android:textSize="@dimen/mc_forum_text_size_13" />

        <View
            android:layout_width="1.0px"
            android:layout_height="fill_parent"
            android:background="@drawable/dz_bg_gray" />

        <TextView
            android:id="@id/mc_forum_fans_center"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/mc_forum_user_fan"
            android:textColor="#ffffffff"
            android:textSize="@dimen/mc_forum_text_size_13" />
    </LinearLayout>

    <View
        android:id="@id/mc_forum_user_verify_center"
        android:layout_width="fill_parent"
        android:layout_height="15.0dip"
        android:layout_above="@id/mc_forum_active"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8.0dip"
        android:gravity="center"
        android:includeFontPadding="false" />

    <TextView
        android:id="@id/mc_forum_user_name_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/mc_forum_user_verify_center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10.0dip"
        android:includeFontPadding="false"
        android:textColor="#ffffffff"
        android:textSize="@dimen/mc_forum_text_size_15" />

    <ImageView
        android:id="@id/mc_forum_user_sex_icon_center"
        android:layout_width="14.0dip"
        android:layout_height="14.0dip"
        android:layout_alignTop="@id/mc_forum_user_name_center"
        android:layout_marginLeft="7.0dip"
        android:layout_marginTop="3.0dip"
        android:layout_toRightOf="@id/mc_forum_user_name_center" />

    <ImageView

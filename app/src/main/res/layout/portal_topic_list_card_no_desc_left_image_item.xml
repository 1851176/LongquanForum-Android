<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@id/mc_forum_topic_box"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip"
        android:paddingTop="8.0dip">

        <RelativeLayout
            android:id="@id/mc_forum_topic_item_box"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dz_list_card_bg">

            <RelativeLayout
                android:id="@id/mc_forum_content_box"
                android:layout_width="fill_parent"
                android:layout_height="65.0dip">

                <ImageView
                    android:id="@id/mc_forum_thumbnail_img"
                    android:layout_width="66.0dip"
                    android:layout_height="52.0dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8.0dip"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@id/mc_forum_topic_title_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8.0dip"
                    android:layout_toRightOf="@id/mc_forum_thumbnail_img"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:scrollHorizontally="true"
                    android:textColor="@color/mc_forum_text4_normal_color"
                    android:textSize="@dimen/mc_forum_text_size_16" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/dz_board_card_middle" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/mc_forum_bottom_box"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/mc_forum_content_box">

                <TextView
                    android:id="@id/mc_forum_portal_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingBottom="3.0dip"
                    android:paddingLeft="5.0dip"
                    android:paddingTop="3.0dip"
                    android:textColor="@color/mc_forum_text4_other_normal_color"
                    android:textSize="@dimen/mc_forum_text_size_10" />

                <TextView
                    android:id="@id/mc_forum_portal_user"
                    style="@style/mc_forum_posts_time_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20.0dip"
                    android:layout_toRightOf="@id/mc_forum_portal_time"
                    android:textColor="@color/mc_forum_text4_flat_other_normal_color"
                    android:textSize="@dimen/mc_forum_text_size_10" />

                <ImageView
                    android:layout_width="12.0dip"
                    android:layout_height="11.0dip"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/mc_forum_comment_num"
                    android:background="@drawable/dz_list_circle_pv" />

                <TextView
                    android:id="@id/mc_forum_comment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/mc_forum_reply_icon"
                    android:paddingBottom="3.0dip"
                    android:paddingLeft="5.0dip"
                    android:paddingTop="3.0dip"
                    android:textColor="@color/mc_forum_text4_other_normal_color"
                    android:textSize="@dimen/mc_forum_text_size_10" />

                <ImageView
                    android:id="@id/mc_forum_reply_icon"
                    android:layout_width="12.0dip"
                    android:layout_height="11.0dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:layout_toLeftOf="@id/mc_forum_reply_num"
                    android:background="@drawable/dz_list_circle_replies" />

                <TextView
                    android:id="@id/mc_forum_reply_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="3.0dip"
                    android:paddingLeft="5.0dip"
                    android:paddingRight="7.0dip"
                    android:paddingTop="3.0dip"
                    android:textColor="@color/mc_forum_text4_other_normal_color"
                    android:textSize="@dimen/mc_forum_text_size_10" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>